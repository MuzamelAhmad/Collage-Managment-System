<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".roll_base"
    android:background="@drawable/bgcolor"
    android:padding="20dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/roll_bg"
        android:layout_gravity="center"
        android:id="@+id/anim">


    <LinearLayout
        android:id="@id/professor_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/professor_roll"
        android:layout_gravity="center" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Professor Login"
        android:textSize="18dp"
        android:layout_below="@id/imageView5"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/black"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/student_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginLeft="95dp">


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/student_roll"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Student Login"
        android:textSize="20dp"
        android:layout_below="@id/imageView6"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/black"/>
    </LinearLayout>

    </LinearLayout>
</LinearLayout >